<div class="auth-page">
  <div class="auth-card">
    <div class="auth-header">
      <div class="auth-logo">JB</div>
      <h1>Create your account</h1>
      <p>Start getting help with life in Japan</p>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "auth-form" }) do |f| %>
      <%= f.error_notification %>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "you@example.com" %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Create a password" %>
        <% if @minimum_password_length %>
          <p class="hint"><%= @minimum_password_length %> characters minimum</p>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm your password" %>
      </div>

      <%= f.submit "Create account", class: "btn-submit" %>
    <% end %>

    <div class="auth-footer">
      <p>Already have an account? <%= link_to "Sign in", new_session_path(resource_name) %></p>
    </div>
  </div>
</div>
