<div class="upload-page">
  <%= link_to documents_path, class: "upload-back" do %>
    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M19 12H5M12 19l-7-7 7-7"/>
    </svg>
    <%= t('documents.back') %>
  <% end %>

  <div class="upload-card">
    <h1><%= t('documents.upload_title') %></h1>

    <%= form_with model: @document, class: "upload-form" do |f| %>
      <% if @document.errors.any? %>
        <div class="form-errors">
          <% @document.errors.full_messages.each do |message| %>
            <p><%= message %></p>
          <% end %>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, placeholder: "e.g., Residence Card Renewal Guide" %>
      </div>

      <div class="form-group">
        <label><%= t('documents.file_label') %></label>
        <label class="file-upload-zone" data-controller="file-upload">
          <%= f.file_field :file, accept: ".pdf,.txt", data: { file_upload_target: "input", action: "change->file-upload#updateFileName" } %>
          <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <path d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
          </svg>
          <p><span>Click to upload</span> or drag and drop</p>
          <p class="file-types" data-file-upload-target="fileName">PDF or TXT up to 10MB</p>
        </label>
      </div>

      <div class="form-group">
        <%= f.label :content, t('documents.content_label') %>
        <%= f.text_area :content, placeholder: "Paste document content here..." %>
        <p class="hint"><%= t('documents.content_hint') %></p>
      </div>

      <%= f.submit t('documents.submit'), class: "btn-submit" %>
    <% end %>
  </div>
</div>
